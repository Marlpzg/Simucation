<BorderPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #FFFFFF;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="main.controller.ModelController">
   <bottom>
      <HBox alignment="CENTER_RIGHT" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnPageTwo" mnemonicParsing="false" onAction="#nextScene" text="Siguiente" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
   <center>
      <HBox alignment="CENTER" prefHeight="500.0" prefWidth="500.0" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" minHeight="-Infinity" prefHeight="400.0" prefWidth="500.0">
               <children>
                  <Label alignment="CENTER" contentDisplay="CENTER" lineSpacing="10.0" text="Nuestro modelo" textAlignment="CENTER">
                     <font>
                        <Font name="TI-Nspire Bold" size="36.0" />
                     </font>
                  </Label>
                  <Label fx:id="lblDesc" maxWidth="600.0" minWidth="600.0" prefWidth="600.0" style="-fx-max-width: 250pt;" text="Ahora ya conoces el dominio sobre el cual aplicaremos la simulación, por lo que ahora debemos determinar un modelo en el que implementaremos el Método de los Elementos Finitos. El modelo a utilizar posee dos incógnitas (A y B):" textAlignment="JUSTIFY" wrapText="true">
                     <font>
                        <Font name="TI-Nspire Regular" size="18.0" />
                     </font>
                     <VBox.margin>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="30.0" />
                     </VBox.margin>
                  </Label>
                  <ImageView fitHeight="200.0" fitWidth="400.0" pickOnBounds="true" preserveRatio="true">
                     <image>
                        <Image url="@../resources/process/model.png" />
                     </image>
                     <VBox.margin>
                        <Insets bottom="30.0" top="30.0" />
                     </VBox.margin>
                  </ImageView>
                  <Label fx:id="lblDesc1" maxWidth="600.0" minWidth="600.0" prefWidth="600.0" style="-fx-max-width: 250pt;" text="Como podrás observar, existen coeficientes dependientes de &quot;x&quot; y &quot;y&quot;, lo cual influirá en nuestro análisis posteriormente." textAlignment="JUSTIFY" wrapText="true">
                     <font>
                        <Font name="TI-Nspire Regular" size="18.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </HBox>
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="btnReturn" mnemonicParsing="false" onAction="#prevScene" text="Regresar" />
         </children>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</BorderPane>
